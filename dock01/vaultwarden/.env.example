# Vaultwarden runtime settings (no real secrets in Git)
TZ=Europe/Paris

# URL publique (reverse proxy / DNS)
DOMAIN=https://secret.url.externe

# Admin token (set on host in /etc/portainer-env/vaultwarden.env)
ADMIN_TOKEN=

# Security / signup
SIGNUPS_ALLOWED=false

# Logs (optional)
LOG_FILE=/data/vaultwarden.log
LOG_LEVEL=info
EXTENDED_LOGGING=true

# Networking / proxy headers (only if you are behind a trusted reverse proxy)
TRUST_PROXY=true
USE_CLIENT_IP=true

# Performance
ROCKET_WORKERS=10

# Websocket (keep if you rely on it; harmless otherwise)
WEBSOCKET_ENABLED=true
